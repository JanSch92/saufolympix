{% extends 'base.html.twig' %}

{% block title %}{{ game.name }} - Quiz{% endblock %}

{% block body %}
<div class="quiz-mobile min-h-screen flex items-center justify-center p-4">
    <div class="quiz-card w-full max-w-md p-6">
        <div class="text-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">{{ game.name }}</h1>
            <p class="text-gray-600 mt-2">Quiz-Teilnahme</p>
        </div>
        
        <form method="POST" id="quizForm">
            <!-- Player Selection -->
            <div class="mb-6">
                <label for="player_id" class="block text-sm font-medium text-gray-700 mb-2">
                    W√§hle deinen Namen
                </label>
                <select id="player_id" 
                        name="player_id" 
                        required 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Bitte w√§hlen</option>
                    {% for player in players %}
                        <option value="{{ player.id }}">{{ player.name }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <!-- Questions -->
            <div class="space-y-6">
                {% for question in questions %}
                    <div class="bg-gray-50 rounded-lg p-4">
                        <label for="answer_{{ question.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ loop.index }}. {{ question.question }}
                        </label>
                        <input type="number" 
                               id="answer_{{ question.id }}" 
                               name="answer_{{ question.id }}" 
                               step="0.01"
                               required 
                               placeholder="Deine Sch√§tzung"
                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>
                {% endfor %}
            </div>
            
            <!-- Submit Button -->
            <div class="mt-8">
                <button type="submit" 
                        class="btn-primary w-full" 
                        onclick="return validateQuizForm()">
                    Antworten abschicken
                </button>
            </div>
        </form>
        
        <div class="mt-4 text-center">
            <div class="text-sm text-gray-600">
                üéØ Tipp: Je n√§her deine Sch√§tzung an der korrekten Antwort liegt, desto mehr Punkte erh√§ltst du!
            </div>
        </div>
    </div>
</div>

<script>
function validateQuizForm() {
    const playerId = document.getElementById('player_id').value;
    const answerInputs = document.querySelectorAll('input[name^="answer_"]');
    
    if (!playerId) {
        alert('Bitte w√§hle deinen Namen aus!');
        return false;
    }
    
    let allAnswered = true;
    answerInputs.forEach(input => {
        if (!input.value.trim()) {
            allAnswered = false;
        }
    });
    
    if (!allAnswered) {
        alert('Bitte beantworte alle Fragen!');
        return false;
    }
    
    return confirm('Antworten wirklich abschicken? Sie k√∂nnen nicht mehr ge√§ndert werden.');
}
</script>
{% endblock %}