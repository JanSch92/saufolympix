{% extends 'base.html.twig' %}

{% block title %}Ergebnisse - {{ game.name }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-800">Ergebnisse eingeben</h1>
                <p class="text-gray-600 mt-1">{{ game.name }} ({{ game.gameType|replace({'_': ' '})|title }})</p>
            </div>
            <a href="{{ path('app_game_admin', {id: game.olympix.id}) }}" 
               class="btn-secondary">
                ‚Üê Zur√ºck
            </a>
        </div>
    </div>
    
    {% if game.isFreeForAllGame %}
        <!-- Free For All Results -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-6">Platzierungen festlegen</h2>
            
            <form action="{{ path('app_game_results', {id: game.id}) }}" method="POST">
                <div class="space-y-4">
                    {% for player in players %}
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                            <div class="flex items-center space-x-4">
                                <div class="font-medium text-gray-800">{{ player.name }}</div>
                                {% if player.hasJokerDoubleAvailable == false %}
                                    <span class="text-xs px-2 py-1 bg-green-100 text-green-800 rounded">
                                        üÉè Doppelte Punkte aktiv
                                    </span>
                                {% endif %}
                            </div>
                            <div>
                                <label for="position_{{ player.id }}" class="text-sm text-gray-600 mr-2">
                                    Platz:
                                </label>
                                <select id="position_{{ player.id }}" 
                                        name="positions[{{ player.id }}]"
                                        class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    <option value="">W√§hlen</option>
                                    {% for i in 1..players|length %}
                                        <option value="{{ i }}" 
                                                {% if existing_results %}
                                                    {% for result in existing_results %}
                                                        {% if result.player.id == player.id and result.position == i %}
                                                            selected
                                                        {% endif %}
                                                    {% endfor %}
                                                {% endif %}>
                                            {{ i }}. Platz
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <div class="mt-8 flex justify-end space-x-4">
                    <a href="{{ path('app_game_admin', {id: game.olympix.id}) }}" 
                       class="btn-secondary">
                        Abbrechen
                    </a>
                    <button type="submit" class="btn-primary">
                        Ergebnisse speichern
                    </button>
                </div>
            </form>
        </div>
    {% elseif game.isTournamentGame %}
        <!-- Tournament Results -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-6">Turnier-Ergebnisse</h2>
            
            {% if game.tournament %}
                <div class="mb-6">
                    <a href="{{ path('app_game_bracket', {id: game.id}) }}" 
                       class="btn-primary">
                        üèÜ Bracket anzeigen
                    </a>
                </div>
                
                {% if game.tournament.isCompleted %}
                    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                        <h3 class="text-lg font-semibold text-green-800 mb-2">Turnier abgeschlossen</h3>
                        <p class="text-green-700">Alle Matches sind gespielt. Ergebnisse k√∂nnen gespeichert werden.</p>
                    </div>
                    
                    <form action="{{ path('app_game_results', {id: game.id}) }}" method="POST">
                        <div class="flex justify-end space-x-4">
                            <a href="{{ path('app_game_admin', {id: game.olympix.id}) }}" 
                               class="btn-secondary">
                                Abbrechen
                            </a>
                            <button type="submit" class="btn-primary">
                                Turnier-Ergebnisse speichern
                            </button>
                        </div>
                    </form>
                {% else %}
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                        <h3 class="text-lg font-semibold text-yellow-800 mb-2">Turnier l√§uft noch</h3>
                        <p class="text-yellow-700">Spiele alle Matches im Bracket, bevor die Ergebnisse gespeichert werden k√∂nnen.</p>
                    </div>
                {% endif %}
            {% else %}
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                    <h3 class="text-lg font-semibold text-red-800 mb-2">Turnier nicht initialisiert</h3>
                    <p class="text-red-700">Das Turnier wurde noch nicht gestartet. Bitte starte das Spiel zuerst.</p>
                </div>
            {% endif %}
        </div>
    {% elseif game.isQuizGame %}
        <!-- Quiz Results -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-6">Quiz-Ergebnisse</h2>
            
            <div class="mb-6">
                <a href="{{ path('app_quiz_results', {gameId: game.id}) }}" 
                   class="btn-primary">
                    üìä Quiz-Ergebnisse anzeigen
                </a>
                <a href="{{ path('app_quiz_calculate', {gameId: game.id}) }}" 
                   class="btn-success ml-2">
                    üßÆ Ergebnisse berechnen
                </a>
            </div>
            
            {% if existing_results %}
                <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                    <h3 class="text-lg font-semibold text-green-800 mb-2">Quiz abgeschlossen</h3>
                    <p class="text-green-700">Alle Antworten wurden bewertet und Punkte vergeben.</p>
                </div>
            {% else %}
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <h3 class="text-lg font-semibold text-yellow-800 mb-2">Quiz l√§uft oder nicht bewertet</h3>
                    <p class="text-yellow-700">Warte bis alle Spieler geantwortet haben und berechne dann die Ergebnisse.</p>
                </div>
            {% endif %}
        </div>
    {% endif %}
    
    <!-- Existing Results -->
    {% if existing_results %}
        <div class="bg-white rounded-lg shadow-md p-6 mt-8">
            <h2 class="text-xl font-bold text-gray-800 mb-6">Aktuelle Ergebnisse</h2>
            
            <div class="space-y-3">
                {% for result in existing_results %}
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                        <div class="flex items-center space-x-4">
                            <div class="ranking-badge {% if result.position == 1 %}ranking-1{% elseif result.position == 2 %}ranking-2{% elseif result.position == 3 %}ranking-3{% else %}ranking-default{% endif %}">
                                {{ result.position }}
                            </div>
                            <div class="font-medium text-gray-800">{{ result.player.name }}</div>
                        </div>
                        <div class="text-lg font-bold text-gray-800">
                            {{ result.finalPoints }} Punkte
                            {% if result.jokerDoubleApplied %}
                                <span class="text-sm text-green-600">(2x)</span>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}