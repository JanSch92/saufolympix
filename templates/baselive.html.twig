{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Saufolympix{% endblock %}</title>

    {# TailwindCSS & QR-Code Library #}
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcode/1.5.3/qrcode.min.js"></script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; margin: 0; padding: 0; }

        /* Spinner for live updates */
        .loading-spinner {
            width: 20px;
            height: 20px;
            border: 2px solid #f3f3f3;
            border-top: 2px solid #3498db;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* Live-update badge */
        .auto-refresh {
            display: inline-flex;
            align-items: center;
            gap: .5rem;
            padding: .5rem 1rem;
            background: #f0fdf4;
            border: 1px solid #bbf7d0;
            border-radius: .5rem;
            color: #166534;
            font-size: .875rem;
            font-weight: 500;
        }

        /* Flash message */
        .flash-message {
            max-width: 90%;
            margin: 0 auto 1rem;
            padding: 1rem;
            border-radius: .5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .flash-success { background: #d1fae5; color: #065f46; border: 1px solid #a7f3d0; }
        .flash-error   { background: #fee2e2; color: #991b1b; border: 1px solid #fca5a5; }
        .flash-warning { background: #fef3c7; color: #92400e; border: 1px solid #fde68a; }
        .flash-info    { background: #dbeafe; color: #1e40af; border: 1px solid #93c5fd; }

        /* Mobile bottom nav */
        .mobile-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: white;
            border-top: 1px solid #e5e7eb;
            display: flex;
            justify-content: space-around;
            padding: 1rem;
            box-shadow: 0 -4px 6px rgba(0,0,0,0.1);
        }
        @media (min-width: 768px) {
            .mobile-nav { display: none; }
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body class="w-screen h-screen bg-gray-100 overflow-hidden">




    <!-- main content: full viewport -->
    <main class="flex-1 w-full h-full">
        {% block body %}{% endblock %}
    </main>

    <!-- mobile bottom navigation -->
    <div class="mobile-nav">
