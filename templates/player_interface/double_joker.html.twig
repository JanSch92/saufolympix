{% extends 'baselive.html.twig' %}

{% block title %}Doppelte Punkte Joker - {{ player.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .game-option {
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(71, 85, 105, 0.3);
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .game-option:hover {
            border-color: rgba(59, 130, 246, 0.3);
            box-shadow: 0 8px 25px -5px rgba(0, 0, 0, 0.2);
            transform: translateY(-2px);
        }
        
        .game-option.selected {
            border-color: rgba(16, 185, 129, 0.5);
            background: rgba(16, 185, 129, 0.1);
            box-shadow: 0 8px 25px -5px rgba(16, 185, 129, 0.3);
        }
        
        .game-option.disabled {
            opacity: 0.5;
            cursor: not-allowed;
            border-color: rgba(239, 68, 68, 0.3);
            background: rgba(239, 68, 68, 0.1);
        }
        
        .game-option.disabled:hover {
            transform: none;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        
        .btn-submit {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 0.75rem;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            width: 100%;
        }
        
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(240, 147, 251, 0.4);
        }
        
        .btn-submit:disabled {
            background: rgba(71, 85, 105, 0.6);
            color: #94a3b8;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        .game-type-icon {
            width: 3rem;
            height: 3rem;
            border-radius: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        }
        
        .points-display {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        /* MOBILE-OPTIMIERTE CONTAINER */
        .main-container {
            height: 100vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }
        
        .form-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        
        .content-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        
        .content-header {
            flex-shrink: 0;
            padding: 1rem;
            padding-bottom: 0.5rem;
        }
        
        .scrollable-content {
            flex: 1;
            overflow-y: auto;
            padding: 1rem;
            padding-top: 0;
            padding-bottom: 10rem; /* VIEL PLATZ F√úR MOBILE NAVIGATION */
            -webkit-overflow-scrolling: touch;
        }
        
        .scrollable-content::-webkit-scrollbar {
            width: 6px;
        }
        
        .scrollable-content::-webkit-scrollbar-track {
            background: rgba(30, 41, 59, 0.3);
        }
        
        .scrollable-content::-webkit-scrollbar-thumb {
            background: rgba(71, 85, 105, 0.6);
            border-radius: 3px;
        }
        
        .scrollable-content::-webkit-scrollbar-thumb:hover {
            background: rgba(71, 85, 105, 0.8);
        }
        
        .submit-section {
            flex-shrink: 0;
            padding: 1rem;
            padding-bottom: 8rem; /* VIEL PLATZ F√úR MOBILE NAVIGATION */
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(20px);
            border-top: 1px solid rgba(71, 85, 105, 0.3);
            position: relative;
            z-index: 10;
        }
        
        .mobile-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 4rem;
            background: rgba(30, 41, 59, 0.95);
            backdrop-filter: blur(20px);
            border-top: 1px solid rgba(71, 85, 105, 0.3);
            box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 100;
        }
        
        .mobile-nav a {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #94a3b8;
            text-decoration: none;
            transition: color 0.3s ease;
            padding: 0.5rem;
        }
        
        .mobile-nav a.active {
            color: #10b981;
        }
        
        /* RESPONSIVE */
        @media (max-width: 768px) {
            .content-header {
                padding: 0.75rem;
                padding-bottom: 0.25rem;
            }
            
            .scrollable-content {
                padding: 0.75rem;
                padding-top: 0;
                padding-bottom: 9rem;
            }
            
            .submit-section {
                padding: 0.75rem;
                padding-bottom: 7rem;
            }
            
            .game-option {
                padding: 0.75rem;
            }
            
            .game-type-icon {
                width: 2.5rem;
                height: 2.5rem;
                font-size: 1.25rem;
            }
        }
        
        @media (max-width: 480px) {
            .content-header {
                padding: 0.5rem;
                padding-bottom: 0.25rem;
            }
            
            .scrollable-content {
                padding: 0.5rem;
                padding-top: 0;
                padding-bottom: 8rem;
            }
            
            .submit-section {
                padding: 0.5rem;
                padding-bottom: 6rem;
            }
            
            .mobile-nav {
                height: 4.5rem;
            }
        }
        
        @media (max-width: 360px) {
            .scrollable-content {
                padding-bottom: 9rem;
            }
            
            .submit-section {
                padding-bottom: 7rem;
            }
            
            .mobile-nav {
                height: 5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="main-container bg-slate-900 text-slate-100">

    <!-- Header -->
    <header class="flex-shrink-0 h-16 flex items-center justify-between px-4 bg-slate-800/50 backdrop-blur-xl border-b border-slate-700/50">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-gradient-to-br from-pink-500 to-rose-500 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
                </svg>
            </div>
            <div>
                <h1 class="text-lg font-bold gradient-text">üî• Doppelte Punkte Joker</h1>
                <p class="text-xs text-slate-400">{{ player.name }}</p>
            </div>
        </div>
        
        <div class="flex items-center space-x-2">
            <span class="text-sm font-medium text-slate-300">{{ player.totalPoints }}</span>
            <span class="text-xs text-slate-500">Punkte</span>
        </div>
    </header>

    {% if available_games_with_status is empty %}
        <!-- No Games Available -->
        <div class="flex-1 flex items-center justify-center p-4">
            <div class="professional-card p-8 text-center max-w-md w-full">
                <div class="w-16 h-16 bg-gradient-to-br from-red-500 to-rose-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L5.636 5.636"></path>
                    </svg>
                </div>
                <h2 class="text-xl font-bold text-slate-200 mb-2">Keine Spiele verf√ºgbar</h2>
                <p class="text-slate-400 text-sm mb-6">Alle Spiele bereits verwendet oder keine zuk√ºnftigen Spiele</p>
            </div>
        </div>
    {% else %}
        <form action="{{ path('app_player_joker_double', {olympixId: olympix.id, playerId: player.id}) }}" 
              method="POST" 
              id="doubleForm" 
              class="form-container">
            
            <!-- Content Wrapper -->
            <div class="content-wrapper">
                <!-- Header -->
                <div class="content-header">
                    <h2 class="text-lg font-semibold text-slate-200 mb-1">Spiel ausw√§hlen</h2>
                    <p class="text-sm text-slate-400">W√§hle ein Spiel f√ºr doppelte Punkte</p>
                </div>
                
                <!-- Scrollable Games List -->
                <div class="scrollable-content">
                    <div class="space-y-3">
                        {% for gameData in available_games_with_status %}
                            {% if gameData.game.gameType != 'split_or_steal' %}
                                <label class="game-option block p-4 {% if gameData.has_double_joker %}disabled{% endif %}" 
                                       for="game_{{ gameData.game.id }}">
                                    <input type="radio" 
                                           id="game_{{ gameData.game.id }}"
                                           name="selected_game_id" 
                                           value="{{ gameData.game.id }}"
                                           class="hidden"
                                           {% if gameData.has_double_joker %}disabled{% endif %}
                                           onchange="selectGame(this, {{ gameData.game.id }})">
                                    
                                    <div class="flex items-center space-x-4">
                                        <div class="game-type-icon">
                                            {% if gameData.game.gameType == 'tournament_team' or gameData.game.gameType == 'tournament_single' %}
                                                üèÜ
                                            {% elseif gameData.game.gameType == 'quiz' %}
                                                üß†
                                            {% else %}
                                                üéØ
                                            {% endif %}
                                        </div>
                                        
                                        <div class="flex-1 min-w-0">
                                            <div class="font-semibold text-slate-100 text-lg truncate">{{ gameData.game.name }}</div>
                                            <div class="text-sm text-slate-400 mt-1">{{ gameData.game.gameTypeLabel }}</div>
                                            {% if gameData.has_double_joker %}
                                                <div class="text-sm text-red-400 font-medium mt-1">üî• Joker bereits verwendet</div>
                                            {% else %}
                                                <div class="text-sm text-emerald-400 font-medium mt-1">üî• Joker verf√ºgbar</div>
                                            {% endif %}
                                        </div>
                                        
                                        <div class="text-right">
                                            {% if not gameData.has_double_joker %}
                                                <div class="points-display">2√ó Punkte</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </label>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            
            <!-- Submit Section -->
            <div class="submit-section">
                <button type="submit" 
                        class="btn-submit" 
                        id="submitBtn"
                        disabled>
                    üî• Doppelte Punkte Joker vormerken
                </button>
            </div>
        </form>
    {% endif %}

    <!-- Mobile Navigation -->
    <div class="mobile-nav">
        <a href="{{ path('app_player_dashboard', {olympixId: olympix.id, playerId: player.id}) }}" class="group active">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span class="text-xs">Dashboard</span>
        </a>
    </div>
</div>

<script>
    let selectedGameId = null;
    let gameData = {};
    
    {% for gameData in available_games_with_status %}
        {% if gameData.game.gameType != 'split_or_steal' %}
            gameData[{{ gameData.game.id }}] = {
                name: "{{ gameData.game.name }}",
                gameType: "{{ gameData.game.gameType }}",
                hasDoubleJoker: {{ gameData.has_double_joker ? 'true' : 'false' }}
            };
        {% endif %}
    {% endfor %}
    
    function selectGame(radio, gameId) {
        selectedGameId = gameId;
        
        document.querySelectorAll('.game-option').forEach(option => {
            option.classList.remove('selected');
        });
        radio.closest('.game-option').classList.add('selected');
        
        updateSubmitButton();
    }
    
    function updateSubmitButton() {
        const submitBtn = document.getElementById('submitBtn');
        
        if (selectedGameId) {
            submitBtn.disabled = false;
            const game = gameData[selectedGameId];
            submitBtn.textContent = `üî• Doppelte Punkte Joker f√ºr "${game.name}" vormerken`;
        } else {
            submitBtn.disabled = true;
            submitBtn.textContent = 'üî• Doppelte Punkte Joker vormerken';
        }
    }
    
    document.getElementById('doubleForm').addEventListener('submit', function(e) {
        if (!selectedGameId) {
            e.preventDefault();
            return;
        }
        
        const game = gameData[selectedGameId];
        const confirmMessage = `Doppelte Punkte Joker f√ºr "${game.name}" vormerken?`;
        
        if (!confirm(confirmMessage)) {
            e.preventDefault();
        }
    });
</script>
{% endblock %}