<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ olympix.name }} - Spieler-Zugang</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
    </style>
</head>
<body class="flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl p-8 w-full max-w-md text-center">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">üèÜ {{ olympix.name }}</h1>
        
        <div class="mb-6">
            <h2 class="text-lg font-semibold text-gray-700 mb-4">W√§hle deinen Namen:</h2>
            
            <div class="space-y-3">
                {% for player in olympix.players %}
                    <a href="{{ path('app_player_dashboard', {olympixId: olympix.id, playerId: player.id}) }}" 
                       class="block w-full p-4 bg-blue-50 hover:bg-blue-100 rounded-lg border-2 border-blue-200 hover:border-blue-400 transition-all">
                        <div class="font-semibold text-gray-800">{{ player.name }}</div>
                        <div class="text-sm text-gray-600">{{ player.totalPoints }} Punkte</div>
                    </a>
                {% endfor %}
            </div>
        </div>
        
        <div class="text-sm text-gray-500">
            W√§hle deinen Namen um deine Punkte und Joker zu verwalten
        </div>
    </div>
</body>
</html>
<script>
// QR-Code ohne externe Bibliothek - als Link
function showQRCode() {
    const playerUrl = '{{ url('app_player_access', {olympixId: olympix.id}) }}';
    document.getElementById('playerQRCode').innerHTML = `
        <div class="bg-gray-100 p-8 rounded-lg">
            <div class="text-2xl mb-4">üì±</div>
            <div class="text-sm mb-4">Link zum Scannen:</div>
            <div class="bg-white p-4 rounded border-2 border-dashed border-gray-300 text-xs break-all">
                ${playerUrl}
            </div>
        </div>
    `;
}
</script>