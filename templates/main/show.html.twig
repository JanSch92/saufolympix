      }
      
      html += '</div></div>';
    }
    
    html += '</div>';
    bracketContent.innerHTML = html;
  }

  // VERBESSERTE REFRESH FUNKTION
  async function refresh() {
    try {
      const response = await fetch('/api/olympix/{{ olympix.id }}/status', {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        }
      });
      
      if (!response.ok) {
        throw new Error('API Error: ' + response.status);
      }
      
      const data = await response.json();
      
      console.log('API Response:', data); // Debug: Komplette API Response
      
      if (data.error) {
        throw new Error('API Error: ' + data.error);
      }
      
      // Update all components
      if (data.players) updateRanking(data.players);
      if (data.games) {
        console.log('Updating game history with', data.games.length, 'games');
        updateGameHistory(data.games);
      } else {
        console.log('No games data in API response');
        // Auto-Scroll trotzdem versuchen mit initial geladenen Daten (nur beim ersten Mal)
        if (!gameHistoryScrollStarted) {
          startGameHistoryAutoScroll();
        }
      }
      
      // Tournament-Ansicht IMMER aktualisieren
      updateTournamentBracket(data.current_game);
      
      // Aktuelles Spiel aktualisieren
      updateCurrentGame(data.current_game);
      
      // Spiel-Ergebnisse aktualisieren
      updateGameResults(data.game_results);
      
    } catch (error) {
      console.error('Refresh error:', error);
      // Bei API-Fehlern: Auto-Scroll trotzdem am Laufen halten (nur beim ersten Mal)
      if (!gameHistoryScrollInterval && !gameHistoryScrollStarted) {
        console.log('API failed, but keeping auto-scroll active');
        startGameHistoryAutoScroll();
      }
    }
  }

  // Initial setup
  refresh();
  setupGameHistoryHoverPause();
  
  // Auto-Scroll initial starten (auch ohne API-Updates) mit mehr Debug
  setTimeout(() => {
    startGameHistoryAutoScroll();
  }, 500);
  
  refreshInterval = setInterval(refresh, 2000); // Häufiger aktualisieren für bessere Reaktionszeit
});

// Cleanup
window.addEventListener('beforeunload', () => {
  if (refreshInterval) clearInterval(refreshInterval);
  stopGameHistoryAutoScroll();
});
</script>

