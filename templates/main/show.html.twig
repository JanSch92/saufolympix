  }

  // AUTO-SCROLL VARIABLEN
  let gameHistoryScrollInterval;
  let gameHistoryScrollPosition = 0;
  let gameHistoryScrollDirection = 1; // 1 = nach unten, -1 = nach oben
  let gameHistoryPaused = false;
  let gameHistoryScrollStarted = false;

