        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Neues Olympix erstellen</h2>
            
            <form action="{{ path('app_create_olympix') }}" method="POST" class="max-w-md mx-auto">
                <div class="mb-4">
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                        Name des Olympix
                    </label>
                    <input type="text" 
                           id="name" 
                           name="name" 
                           required 
                           placeholder="z.B. Saufolympix 2024"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                </div>
                
                <button type="submit" class="btn-primary w-full">
                    Olympix erstellen
                </button>
            </form>
        </div>
    </div>
    
    <!-- Recent Olympix -->
    {% if recent_olympix %}
